<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="76dp"

    android:id="@+id/Alpha"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ImgIng"
        android:layout_width="310dp"
        android:layout_height="76dp"
        android:background="@drawable/shape_drawable"
        android:backgroundTint="#D9D9D9"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/IngMateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ImgIng"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ImgIng"
        app:layout_constraintBottom_toBottomOf="@id/ImgIng"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/MesMateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/InstrTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ImgIng"
        app:layout_constraintEnd_toEndOf="@id/ImgIng"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="13sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>