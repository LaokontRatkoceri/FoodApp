<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Image_Profile"
        android:layout_width="99dp"
        android:layout_height="99dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/EmailText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Image_Profile"
        app:layout_constraintTop_toTopOf="@id/Image_Profile"
        app:layout_constraintBottom_toBottomOf="@id/Image_Profile"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="LAokont"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/NameText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Image_Profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="LAokont"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/FavoritesTextBack"
        android:layout_width="76dp"
        android:layout_height="31dp"
        app:layout_constraintStart_toStartOf="@id/FavoritesText"
        app:layout_constraintEnd_toEndOf="@id/FavoritesText"
        app:layout_constraintTop_toTopOf="@id/FavoritesText"
        app:layout_constraintBottom_toBottomOf="@id/FavoritesText"
        android:background="@drawable/shape_drawable"
        android:backgroundTint="#129575"
        />

    <TextView
        android:id="@+id/FavoritesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/NameText"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Favorits"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecView"
        android:layout_width="325dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/FavoritesTextBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/LogoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/NameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/NameText"
        android:background="@drawable/rectangle8"
        android:layout_marginEnd="30dp"
        android:src="@drawable/baseline_logout_24"
        />


</androidx.constraintlayout.widget.ConstraintLayout>